import contractInfo from "../contract_info.json";

const { contract_id, network } = contractInfo;

export async function invokeContract(functionName, args = []) {
  try {
    const response = await fetch("https://soroban-testnet.stellar.org/rpc", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        jsonrpc: "2.0",
        id: 1,
        method: "simulateTransaction", // for read-only simulation
        params: {
          contractId: contract_id,
          functionName,
          args,
          network,
        },
      }),
    });

    const data = await response.json();
    return data.result || data.error;
  } catch (err) {
    console.error("‚ùå Contract call failed:", err);
    return null;
  }
}
